<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>io.pivotal.cf.broker</groupId>
		<artifactId>gpdb-broker-parent</artifactId>
		<version>1.0.0</version>
	</parent>

	<artifactId>gpdb-broker</artifactId>

	<properties>
		<java.version>1.8</java.version>
		<spring-cloud-deployer-spi.version>1.1.4.RELEASE</spring-cloud-deployer-spi.version>
		<spring-cloud-deployer-cf.version>1.1.1.RELEASE</spring-cloud-deployer-cf.version>
		<cloudfoundry-java-lib.version>2.9.0.RELEASE</cloudfoundry-java-lib.version>
        <awssdk.version>1.11.183</awssdk.version>
        <azuresdk.version>1.2.0</azuresdk.version>
        <azureannotations.version>1.2.0</azureannotations.version>
        <azureclient.version>1.1.0</azureclient.version>
        <vsphereapi.version>2.7.0</vsphereapi.version>
        <vmwaresdk.version>6.6.1</vmwaresdk.version>
	</properties>

	<dependencies>
        <dependency>
            <groupId>com.amazonaws</groupId>
            <artifactId>aws-java-sdk-cloudformation</artifactId>
            <version>${awssdk.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.6</version>
        </dependency>
        <dependency>
            <groupId>com.vmware.vapi</groupId>
            <artifactId>vapi-runtime</artifactId>
            <version>${vsphereapi.version}</version>
        </dependency>
        <dependency>
            <groupId>com.vmware.vapi</groupId>
            <artifactId>vapi-authentication</artifactId>
            <version>${vsphereapi.version}</version>
        </dependency>
        <dependency>
            <groupId>com.vmware.vapi</groupId>
            <artifactId>vapi-samltoken</artifactId>
            <version>${vsphereapi.version}</version>
        </dependency>
        <dependency>
            <groupId>com.vmware</groupId>
            <artifactId>vsphereautomation-client-sdk</artifactId>
            <version>${vmwaresdk.version}</version>
        </dependency>
        <!-- dependency>
            <groupId>com.vmware.sso</groupId>
            <artifactId>ssoclient</artifactId>
            <version>${vsphereapi.version}</version>
        </dependency -->
        <!-- dependency>
            <groupId>com.vmware.vsphereautomation.lookup</groupId>
            <artifactId>vsphereautomation-lookupservice</artifactId>
            <version>${vsphereapi.version}</version>
        </dependency -->
        <dependency>
            <groupId>com.microsoft.azure</groupId>
            <artifactId>azure</artifactId>
            <version>${azuresdk.version}</version>
        </dependency>
        <dependency>
            <groupId>com.microsoft.azure</groupId>
            <artifactId>azure-client-runtime</artifactId>
            <version>${azureclient.version}</version>
        </dependency>
        <dependency>
            <groupId>com.microsoft.azure</groupId>
            <artifactId>azure-client-authentication</artifactId>
            <version>${azureclient.version}</version>
            <!-- scope>test</scope -->
        </dependency>
        <dependency>
            <groupId>com.microsoft.azure</groupId>
            <artifactId>azure-annotations</artifactId>
            <version>${azureannotations.version}</version>
        </dependency>
        <!-- dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-deployer-local</artifactId>
            <version>${spring-cloud-deployer-cf.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.cloud</groupId>
